<article class="ajax">
    <section class="ajax-head">
      <div class="ajax-body">
        <%= form_for :article,  url: articles_path do |f| %>

          <p>
            <%= f.label :title%> <br>
            <%=f.text_field :title %>
          </p>
          <p>
            <%= f.label :body%> <br>
            <%=f.text_area :body %>
          </p>

          <p>
            <%=f.submit class: 'btn btn-dark' %>
          </p>
        <% end %>
      </div>
    </section>
</article>
