<h2>Edit Artist</h2>

  <article class="audio">
    <section class="audio-head">
      <% if @artist.errors.any?  %>
             <div class="alert alert-danger">
                 <h2>
                   <%= pluralize(@artist.errors.count, "error") %> 
                 </h2>
                 <ul>
                   <% @artst.errors.full_messages.each do |msg| %>
                     <li><%= msg %></li>
                   <% end %>
                 </ul>
               </div>
           <% end %>
      <%= simple_form_for @artist, html: {multipart: true}, url: artist_path(@artist), method: :patch do |f| %>
      <p>
        Name <br>
        <%=f.text_field :name %>
      </p>
      <p>
        Description <br>
        <%=f.text_area :description %>
      </p>

      <p>
        Image <br>
        <%=f.file_field :image %>
      </p>

        <%= f.hidden_field :group_id, :value => @group %>
        <p>
        <%=f.submit class: 'btn btn-dark' %>
      </p>
      <% end %>
    </section>
  </article>
