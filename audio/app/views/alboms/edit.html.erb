<h2>Edit Albom</h2>

  <article class="audio">
    <section class="audio-head">
      <%= simple_form_for @albom, html: {multipart: true}, url: albom_path(@albom), method: :patch do |f| %>
      <p>
        Name <br>
        <%=f.text_field :name %>
      </p>
      <p>
        Description <br>
        <%=f.text_area :description %>
      </p>

      <p>
        Image <br>
        <%=f.file_field :image %>
      </p>

        <p>
        <%=f.submit class: 'btn btn-dark' %>
      </p>
      <% end %>
    </section>
  </article>
