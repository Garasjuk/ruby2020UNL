<h2>New Albom</h2>

<article class="audio">
  <section class="audio-head">
    <%# <%= simple_form_for :albom, html: {multipart: true}, url: group_alboms_path do |f| %> %>
    <%= form_for @albom, html: {multipart: true}, url: group_alboms_path do |f| %>

    <p>
      Name <br>
      <%=f.text_field :name %>
    </p>
    <p>
      Description <br>
      <%=f.text_area :description %>
    </p>
    <p>
      Image <br>
      <%=f.file_field :image %>
    </p>

    <p>
        <%= f.select(:gener_id, options_from_collection_for_select(@gener, :id, :name), include_blank: true)%>
    </p>
    <p>
      <%= f.hidden_field :artist_id, :value => @group %>
      <%= f.hidden_field :group_id, :value => @group %>
    </p>
    <% @albom.songs.each do |song| %>
        <%= f.fields_for :songs, song do |a| %>
          <p>
            Name <br>
            <%=a.text_field :name %>
          </p>
        <% end %>
    <% end %>
      <p>
      <%=f.submit class: 'btn btn-dark' %>
    </p>
    <% end %>
  </section>
</article>
