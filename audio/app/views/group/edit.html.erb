<h2>Edut Group</h2>


  <article class="audio">
    <section class="audio-head">
      <% if @group.errors.any?  %>
             <div class="alert alert-danger">
                 <h2>
                   <%= pluralize(@group.errors.count, "error") %> 
                 </h2>
                 <ul>
                   <% @group.errors.full_messages.each do |msg| %>
                     <li><%= msg %></li>
                   <% end %>
                 </ul>
               </div>
           <% end %>
      <%= simple_form_for @group, html: {multipart: true}, url: group_path(@group), method: :patch do |f| %>
      <p>
        Name <br>
        <%=f.text_field :name %>
      </p>
      <p>
        Description <br>
        <%=f.text_area :description %>
      </p>

      <p>
        Image <br>
        <%=f.file_field :image %>
      </p>

        <p>
        <%=f.submit class: 'btn btn-dark' %>
      </p>
      <% end %>
    </section>
  </article>
