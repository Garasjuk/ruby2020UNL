<!DOCTYPE html>
<html>
  <head>
    <title>Audio</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="container">
     <nav class="navbar navbar-light bg-faded">
       <ul class="navbar-nav">
         <li class="nav-item active">
           <%= link_to 'Main', group_index_path, class: 'btn btn-outline-primary pull-xs-right' %>
           <%= link_to 'New Group', new_group_path, class: 'btn btn-outline-primary pull-xs-right' %>
           <%= link_to 'New Gener', new_gener_path, class: 'btn btn-outline-primary pull-xs-right' %>


         </li>
       </ul>

     </nav>
   </div>

   <div class="container">
     <div class="row">
       <div class="col-md-12">
         <% flash.each do |name,message| %>
           <div class="alert alert-<%= name %>">
             <%= message %>
           </div>
         <% end %>
       </div>
     </div>

    <%= yield %>
  </body>
</html>
