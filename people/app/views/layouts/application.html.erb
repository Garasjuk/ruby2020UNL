<!DOCTYPE html>
<html>
  <head>
    <title>People</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>


      <div class="container">
        <nav class="navbar navbar-light bg-faded">
          <ul class="navbar-nav">
            <li class="nav-item active">

                <%= link_to 'Main', users_url, class: 'btn btn-outline-primary pull-xs-right' %>
                <%= link_to 'New User', new_user_path, class: 'btn btn-outline-primary pull-xs-right' %>
                <%= link_to 'Friend', friend_url, class: 'btn btn-outline-success pull-xs-right' %>
                <%= link_to 'Neutrlity', neutrality_url, class: 'btn btn-light pull-xs-right' %>
                <%= link_to 'Enemy', enemy_url, class: 'btn btn-outline-dark pull-xs-right' %>
            </li>
          </ul>
          <ul class="navbar-nav">
            <li class="nav-item active">
              <%= link_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path %>
            </li>
          </ul>
          <ul class="navbar-nav">
            <li class="nav-item active">
                <% if current_user %>
                  Logged in as <b> <%= current_user.name %></b>.
                  <%= link_to "Log out", log_out_path %>&nbsp
                  <%= link_to "Account", account_path(current_user) %>

                <% else %>
                  <%= link_to "Sign up", sign_up_path %> or
                  <%= link_to "log in", log_in_path %>
                <% end %>
            </li>
          </ul>

        </nav>

      </div>

  </head>

  <body>
    <%= yield %>
  </body>
</html>
