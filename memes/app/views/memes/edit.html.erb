<h3> Edit memes</h3>
<article class="meme">
  <section class="meme-head">
<%= form_for :meme, html: {multipart: true}, url: meme_path(@meme), method: :patch  do |f| %>
    <% if @meme.errors.any?  %>
      <div class="alert alert-danger">
          <h2>
            <%= pluralize(@meme.errors.count, "error") %> prohibited
            Meme task from being saved:
          </h2>
          <ul>
            <% @meme.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

  <p>
    <%= f.label :title %> <br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %> <br>
    <%=f.text_area :description %>
  </p>
  <p>
    <%= image_tag @meme.image.url, size: "200x200" if @meme.image? %><br>
    <%= f.label :image%> <br>
    <%=f.file_field :image %>
  </p>
  <p>
    <%= f.label :author%> <br>
    <%=f.text_field :author %>
  </p>
  <p>
    <%=f.submit class: 'btn btn-dark' %>
  </p>
<% end %>

</section>
    </article>
