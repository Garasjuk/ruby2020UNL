<h3> Add new memes</h3>
<article class="meme">
  <section class="meme-head">
    <%= form_for :meme, html: {multipart: true}, url: memes_path do |f| %>
      <% if @meme.errors.any?  %>
        <div class="alert alert-danger">
            <h2>
              <%= pluralize(@meme.errors.count, "error") %> prohibited
              Meme task from being saved:
            </h2>
            <ul>
              <% @meme.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <p>
        Name <br>
        <%=f.text_field :title %>
      </p>
      <p>
        Description <br>
        <%=f.text_area :description %>
      </p>

      <p>
        Image <br>
        <%=f.file_field :image %>
      </p>

      <p>
        Author <br>
        <%=f.text_field :author %>
      </p>

      <p>
        <%=f.submit class: 'btn btn-dark' %>
      </p>
    <% end %>

  </section>
</article>
