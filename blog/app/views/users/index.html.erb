<article class="blog">
    <section class="blog-head">
      <div class="container">
        <h2>Users page</h2>

            <%# <%= will_paginate @blog, :renderer => 'BootstrapPagination::Rails' %> %>

          <div class="row">
            <% @user.each do |user| %>
                    <div class="gallery_product col-lg-4 col-md-4 col-sm-4 col-xs-6 filter hdpe">
                      <h2><%= link_to user.username, user_path(user) %></h2>
                      <br>
                      <small>

                        <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-warning' %>
                        <%= link_to 'Destroy', user_path(user), method: :delete, data:{confirm: 'Are you sure?'}, class: 'btn btn-danger' %><br>
                      </small>
                      <hr>
                    </div>
            <% end %>
          </div>

        <%# <%= will_paginate @blog, :renderer => 'BootstrapPagination::Rails' %> %>
        </div>
    </section>
</article>
