<article class="blog">
    <section class="blog-head">
      <div class="container">
        <h2>Roles page</h2>

            <%# <%= will_paginate @blog, :renderer => 'BootstrapPagination::Rails' %> %>

          <div class="row">
            <% @role.each do |role| %>
                    <div class="gallery_product col-lg-4 col-md-4 col-sm-4 col-xs-6 filter hdpe">
                      <% @user.each do |user| %>
                        <% if role.id == user.role_id %>
                          <p><%= user.username %></p>
                        <% end %>
                      <% end %>
                      <p>CREATE:<%= role.create_at %></p>
                      <p>UPDATE:<%= role.update_at %></p>
                      <p>READ:<%= role.read_at %></p>
                      <p>DELETE:<%= role.delete_at %></p>
                      <p>ADMIN:<%= role.admin_at %></p>
                      <br>
                      <small>

                        <%= link_to 'Edit', edit_role_path(role), class: 'btn btn-warning' %>
                        <%= link_to 'Destroy', role_path(role), method: :delete, data:{confirm: 'Are you sure?'}, class: 'btn btn-danger' %><br>
                      </small>
                      <hr>
                    </div>
            <% end %>
          </div>

        <%# <%= will_paginate @blog, :renderer => 'BootstrapPagination::Rails' %> %>
        </div>
    </section>
</article>
