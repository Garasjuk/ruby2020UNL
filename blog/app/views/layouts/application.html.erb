<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>


    <div class="container">
      <nav class="navbar navbar-light bg-faded">
        <ul class="navbar-nav">
          <li class="nav-item active">
              <%= link_to 'Main', subjects_path, class: 'btn btn-outline-primary pull-xs-right' %>
              <%= link_to 'New subject', new_subject_path, class: 'btn btn-outline-primary pull-xs-right' %>
              <%= link_to 'Users', users_path, class: 'btn btn-outline-primary pull-xs-right' %>
              <%= link_to 'Roles', roles_path, class: 'btn btn-outline-primary pull-xs-right' %>

          </li>
        </ul>

        <ul class="navbar-nav">
          <li class="nav-item active">
            <% if current_user %>
              Logged in as <b> <%= current_user.username %></b>.

              <%= link_to "Log out", log_out_path %>&nbsp
              <%= link_to "Account", account_path(current_user) %>

            <% else %>
              <%= link_to "Sign up", sign_up_path %> or
              <%= link_to "log in", log_in_path %>
            <% end %>
          </li>
        </ul>
      </nav>
    </div>


    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <% flash.each do |name,message| %>
            <div class="alert alert-<%= name %>">
              <%= message %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
